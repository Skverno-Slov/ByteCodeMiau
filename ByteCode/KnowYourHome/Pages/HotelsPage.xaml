<Page x:Class="KnowYourHome.HotelsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KnowYourHome"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HotelsPage">
    <Grid>
        <DataGrid ItemsSource="{Binding EntertainmentItems}" AutoGenerateColumns="True" Margin="10" Height="400"/>
        <Button Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="10"
                Command="{Binding NavigateBackCommand}"/>
    </Grid>
</Page>
