<Page x:Class="KnowYourHome.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KnowYourHome"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage" Background="White">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Отели"  Command="{Binding NavigateToHotelsCommand}" DockPanel.Dock="Top"/>
            <Button Content="Рестораны"  Command="{Binding NavigateToRestaurantsCommand}" DockPanel.Dock="Top"/>
            <Button Content="Памятники"  Command="{Binding NavigateToMonumentsCommand}" DockPanel.Dock="Top"/>
        </StackPanel>
        <StackPanel  VerticalAlignment="Center">
            <Button Content="Маршруты" Command="{Binding NavigateToRoutesCommand}" DockPanel.Dock="Top"/>
            <Button Content="Создать точку" Command="{Binding NavigateToCreatePointCommand}" DockPanel.Dock="Top"/>
        </StackPanel>
    </DockPanel>
</Page>
