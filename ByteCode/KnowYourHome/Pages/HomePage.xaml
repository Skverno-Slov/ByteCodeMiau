<Page x:Class="KnowYourHome.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KnowYourHome"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage" Background="White">
    <DockPanel>
        <Button Content="Отели" Width="100" Height="30" Command="{Binding NavigateToHotelsCommand}" DockPanel.Dock="Top"/>
        <Button Content="Рестораны" Width="100" Height="30" Command="{Binding NavigateToRestaurantsCommand}" DockPanel.Dock="Top"/>
        <Button Content="Памятники" Width="100" Height="30" Command="{Binding NavigateToMonumentsCommand}" DockPanel.Dock="Top"/>
        <Button Content="Маршруты" Width="100" Height="30" Command="{Binding NavigateToRoutesCommand}" DockPanel.Dock="Top"/>
    </DockPanel>
</Page>
