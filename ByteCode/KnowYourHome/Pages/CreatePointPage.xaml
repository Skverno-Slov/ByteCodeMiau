<Page x:Class="KnowYourHome.Pages.CreatePointPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KnowYourHome.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePointPage">

    <StackPanel Width="800" Height="450">
        <StackPanel x:Name="HotelsStackPanel"/>


        <Button Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="10"
            Command="{Binding NavigateBackCommand}"/>
        <StackPanel Margin="10">
            <TextBlock Text="Город"/>
            <ComboBox x:Name="comboCity" />
            <TextBlock Text="ТипТочки"/>
            <ComboBox x:Name="comboEntertamentType"/>
            <TextBlock Text="Тип Туризма"/>
            <ComboBox x:Name="comboTuristType"/>
            <TextBlock Text="Адрес"/>
            <TextBox x:Name="txtAddress"/>
            <TextBlock Text="Название"/>
            <TextBox x:Name="txtEntertamentName"/>
            <TextBlock Text="Описание"/>
            <TextBox x:Name="txtDescription"/>
            <TextBlock Text="Ссылка на сайт"/>
            <TextBox x:Name="txtSiteLink"/>
            <TextBlock Text="Широта"/>
            <TextBox x:Name="txtLatitude"/>
            <TextBlock Text="Долгота"/>
            <TextBox x:Name="txtLongitude"/>
            <TextBlock Text="Цена"/>
            <TextBox x:Name="txtPrice"/>
            <Button x:Name="AddImageButton" Content="Выбрать изображение" Click="AddImageButton_Click"/>
            <Button x:Name="AddToTableButton" Content="Добавить" Margin="0,10,0,0" Click="AddToTableButton_Click"/>
        </StackPanel>

    </StackPanel>
</Page>
